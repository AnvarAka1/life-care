<%- include('./includes/head.ejs') %>

<%- include('./includes/nav') %>

<%- include('./includes/mobile-nav') %>

<!-- Subheader-start -->

<section class="sub-section sub-subheader">
  <div class="container">
    <div class="sub-subheader--inner">
      <h1><%= t('Blog') %></h1>
      <div class="breadcrumbs-wrapper">
        <ul class="breadcrumbs">
          <li><a href="/"><i class="fa fa-home"></i> <%= t('Home') %></a> <span>/</span></li>
          <li><%= t('Blog Details') %></li>
        </ul>
      </div>
    </div>
  </div>
</section>
<!-- Subheader-end -->

<!-- Blog-Classic-section -->
<section class="section blog-section">
  <div class="container">
    <div class="row">
      <!-- left-column -->
      <div class="col-lg-8">
        <!-- blog-left-sidebar -->
        <div class="blog-content-area">

          <!-- post-one -->
          <div class="blog-post mb-4">
            <div class="blog-image">
              <img src="<%= blog.key %>" class="img-fluid" alt="<%= blog.title %>">
            </div>
            <div class="blog-body blog-single">
              <h3 class="mb-3"><a href=""><%= blog.title %></a></h3>
              <div class="news-list mb-3">
                <ul>
                  <li class="pr-3">
                    <a href="blog-detail.html">
                      <i class="fa fa-calendar yellow"></i> <%= blog.createdAt %>
                    </a>
                  </li>
                </ul>
              </div>
              <%- blog.description %>
            </div>
          </div>
        </div>
      </div>
      <!-- end -->

      <!-- right-sidebar-column -->
      <div class="col-lg-4">
        <!-- sidebar-posts -->
        <div class="sidebar-widget sidebar-posts mb-3">
          <div class="sidebar-content">
            <h4 class="font-weight-bold mb-3"><%= t('Resent Posts') %></h4>
            <ul class="widget">
              <% recentBlogs.forEach(blog => { %>

                <li>
                  <a href="/blogs/<%= blog._id %>">
                    <%= blog.title %>
                  </a>
                  <p><span class="date"><%= blog.createdAt %></span></p>
                </li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('./includes/footer') %>

<%- include('./includes/scripts') %>

<%- include('./includes/tail.ejs') %>
