<%- include('./includes/head.ejs') %>

<%- include('./includes/nav') %>

<%- include('./includes/mobile-nav') %>
<!-- Subheader-start -->

<section class="sub-section sub-subheader">
  <div class="container">
    <div class="sub-subheader--inner">
      <h1><%= t('Treatment in India') %></h1>
      <div class="breadcrumbs-wrapper">
        <ul class="breadcrumbs">
          <li><a href="/"><i class="fa fa-home"></i> <%= t('Home') %></a> <span>/</span></li>
          <li><%= t('Treatment in India') %></li>
        </ul>
      </div>
    </div>
  </div>
</section>
<!-- Subheader-end -->

<!-- Blog-start -->
<section class="blog">
  <div class="container">
    <div class="row">
      <!-- Multiple -->
      <div class="col-xl-8 offset-xl-2">
        <div class="service-heading text-center mb-5">
          <h6><%= t('See our treatments in India') %></h6>
          <h2><%= t('Treatments') %></h2>

        </div>
      </div>
    </div>

    <div class="row">
      <% list.forEach(item => { %>
        <div class="col-lg-4 col-md-6">
          <div class="services__wrapper mb-40">
            <div class="services-item scale">
              <div class="services__thumb thumb fix w-img">
                <img src="<%= item.key %>" class="img-fluid" alt="<%= item.title %>">
              </div>
              <div class="services__content">
                <h3><a href="/treatments/<%= item._id %>"><%= item.title %></a></h3>
                <p>
                  <%= item.shortDescription %>
                </p>
                <a href="/treatments/<%= item._id %>" class="btn btn-secondary">
                  Read more <i class="fa fa-long-arrow-right"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>

    </div>
  </div>

  <%- include('./includes/pagination', { pagination }) %>

</section>
<!-- end -->
<%- include('./includes/footer') %>

<%- include('./includes/scripts') %>

<%- include('./includes/tail.ejs') %>
